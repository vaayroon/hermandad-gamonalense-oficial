---
import FooterContent from "@/components/FooterContent.astro";
import SocialButtons from "@/components/SocialButtons.astro";
---

<footer
  class="relative mt-20 w-full flex flex-col md:flex-row justify-center items-center md:justify-between pt-14 md:pt-16 pb-20 gap-y-10"
>
  <hr
    class="absolute top-0 h-[2px] w-full min-w-[18rem] border-t-0 bg-transparent bg-gradient-to-r from-transparent via-primary-400 to-transparent bg-center md:my-9"
  />
  <FooterContent />
  <hr
		aria-hidden="true"
		class="my-12 h-[2px] w-full min-w-[18rem] border-t-0 bg-transparent bg-gradient-to-r from-transparent via-primary-400 to-transparent bg-center md:hidden"
	/>
  <SocialButtons />
</footer>
