---
import type { Event } from '../../types/Event';
import EventCoverImage from './EventCoverImage.astro';

interface Props {
  event: Event;
}

const { event } = Astro.props;

const formatDate = (dateString: string): string => {
  return new Date(dateString).toLocaleDateString('es-PE', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<article class="bg-white rounded-lg shadow-md overflow-hidden" data-categorycards={event.category.id}>
  <EventCoverImage
    id={event.id}
    category={event.category}
    name={event.title}
    loading="eager"
  />
  <div class="p-4">
    <h3 class="text-xl font-semibold mb-2">{event.title}</h3>
    <p class="text-gray-600 mb-2">
      {formatDate(event.date)}
    </p>
    <p class="text-gray-700 mb-4">{event.description}</p>
    
    {event.prioste && (
      <p class="text-sm text-gray-600 mb-2">
        <span class="font-semibold">Prioste:</span> {event.prioste}
      </p>
    )}

    <div class="mt-4">
      <button
        class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors duration-200"
        data-event-id={event.id}
      >
        Ver galer√≠a
      </button>
    </div>
  </div>
</article>